---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import i18next, { t, init } from "i18next";

import ProjectInformation from "../content/project-information.json"

import skTranslation from "../locales/sk/translation.json";
import enTranslation from "../locales/en/translation.json";


await init({
  lng: "sk", // Set default language to Slovak
  debug: true,
  resources: {
    en: { translation: enTranslation },
    sk: { translation: skTranslation }
  }
});
---

<Layout title="Dialogue Center">
  <section class="max-w-5xl mx-auto px-6 py-12 text-center md:text-left">
    <h1 class="text-4xl font-bold mb-4">{t("contact.heading1")}</h1>
    <p class="text-xl text-gray-600 mb-8">{t("contact.heading2")}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
      <!-- Contact Info -->
      <div class="space-y-6">
        
                <div class="space-y-2">
                  <a
                    href="mailto:dialoguecentre13@gmail.com"
                    class="text-blue-600 hover:underline"
                  >
                    {ProjectInformation.email}
                  </a>
                  <br />
                  <a href="tel:+421908358915" class="text-blue-600 hover:underline">
                    {ProjectInformation.phoneNumber}
                  </a>
                </div>
        <p class="text-lg font-semibold">Dialogue Centre, n. o.</p>
        <p>Horná 12<br />974 01 Banská Bystrica<br />Slovakia</p>
        <p>IČO: 51281279</p>

        <!-- Social Links -->
        <div class="flex items-center space-x-4 justify-center md:justify-normal">
          <a
            href="https://www.facebook.com/UKCEEDialogueCentre"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:opacity-80 transition duration-300"
          >
            <svg
              width="40"
              height="40"
              viewBox="0 0 65 64"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <g clip-path="url(#clip0_200_116)">
                <path
                  d="M64.3331 32C64.3331 14.327 50.0061 0 32.3331 0C14.6602 0 0.33313 14.327 0.33313 32C0.33313 47.0067 10.6653 59.5994 24.6032 63.0579V41.7792H18.0048V32H24.6032V27.7862C24.6032 16.8947 29.5325 11.8464 40.2256 11.8464C42.2531 11.8464 45.7514 12.2445 47.1824 12.6413V21.5053C46.4272 21.4259 45.1152 21.3862 43.4858 21.3862C38.2391 21.3862 36.2115 23.3741 36.2115 28.5414V32H46.664L44.8682 41.7792H36.2115V63.7658C52.0567 61.8522 64.3344 48.361 64.3344 32H64.3331Z"

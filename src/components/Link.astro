---
export interface Props {
  href: string;
  text: string;
  external?: boolean;
}

const { href, text, external = false } = Astro.props;
---

<a
  href={href}
  target={external ? "_blank" : undefined}
  rel={external ? "noopener noreferrer" : undefined}
  class="inline-flex items-center font-medium text-blue-600 dark:text-blue-400
         hover:text-blue-800 dark:hover:text-blue-300
         underline underline-offset-2 decoration-1
         transition-colors duration-150 ease-in-out"
>
  {text}
  {
    external && (
      <svg
        class="ml-1 h-3 w-3 shrink-0"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4m-6-4l8-8m0 0L14 2m4 4L14 2"
        />
      </svg>
    )
  }
</a>

      </div>
    </div>
  </div>
</footer>

<script>
  // Copy to clipboard functionality
  document.addEventListener('DOMContentLoaded', () => {
    const phoneLink = document.getElementById('phone-link');
    if (phoneLink) {
      phoneLink.addEventListener('click', (e) => {
        // Only handle the click if it's a desktop device (mobile will use the tel: link)
        if (window.innerWidth >= 768) {
          e.preventDefault();
          const phoneNumber = "+421908358915";
          navigator.clipboard.writeText(phoneNumber).then(() => {
            // Create a tooltip instead of an alert
            const tooltip = document.createElement('div');
            tooltip.textContent = 'Telefónne číslo skopírované!';
            tooltip.className = 'fixed bg-emerald-700 text-white py-2 px-4 rounded-lg shadow-lg z-50 text-sm';
            tooltip.style.transition = 'opacity 0.5s';
            document.body.appendChild(tooltip);
            
            // Position the tooltip near the phone element
            const rect = phoneLink.getBoundingClientRect();
            tooltip.style.top = `${rect.bottom + 10}px`;
            tooltip.style.left = `${rect.left + rect.width/2 - tooltip.offsetWidth/2}px`;
            
            // Remove the tooltip after 2 seconds
            setTimeout(() => {
              tooltip.style.opacity = '0';
              setTimeout(() => {
                if (document.body.contains(tooltip)) {
                  document.body.removeChild(tooltip);
                }
              }, 500);
            }, 2000);
          }).catch(err => {
            console.error("Chyba pri kopírovaní telefónneho čísla: ", err);
          });
        }
      });
    }
  });
</script>

<style>
  /* Add any additional styles here */
  @media (max-width: 768px) {
    .grid {
      row-gap: 2rem;
    }
  }
</style>

---
import translations from "../i18/index.json";

const locale = "en";  
const t = translations[locale].about;

const aboutImage = "/logos/about_us_photo.jpeg"; // Ensure correct path
---

<section class="w-full flex flex-col lg:flex-row justify-center items-center px-8 py-16">
  <!-- Image Section -->
  <div class="lg:w-1/3 p-4 border-2 border-[#2878de] rounded-lg shadow-lg lg:mr-[-4%]">
    <img src={aboutImage} alt="About Us Image" class="w-full h-auto rounded-lg">
  </div>

  <!-- Text Section -->
  <div class="lg:w-1/3 p-6 border-2 border-[#2878de] rounded-lg shadow-lg bg-white ml-6 mt-6 lg:mt-0">
    <h2 class="text-4xl font-bold font-['Nunito'] text-[#102756] uppercase">{t.title}</h2>
    <p class="text-gray-700 text-[1.5rem] font-['Nunito'] mt-4">{t.text}</p>
  </div>
</section>

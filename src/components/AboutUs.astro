---
const aboutImage = "/about-us.jpg";
const { title, text } = Astro.props;
---

<section class="w-full flex flex-col lg:flex-row justify-center items-center px-8 py-16">
  <!-- Image Section -->
  <div class="lg:w-1/3 p-4 border border-gray-200 rounded-xl shadow-md lg:mr-[-4%] overflow-hidden relative z-0 bg-white dark:bg-gray-800 dark:border-gray-700">
    <img src={aboutImage} alt="About Us Image" class="w-full h-auto rounded-lg object-cover">
    <div class="absolute inset-0 border-4 border-transparent hover:border-blue-500/20 transition-all duration-300 rounded-lg pointer-events-none"></div>
  </div>

  <!-- Text Section -->
  <div class="lg:w-1/3 p-8 border border-gray-200 rounded-xl shadow-md bg-white dark:bg-gray-800 dark:border-gray-700 ml-6 mt-6 lg:mt-0 relative z-10">
    <h2 class="text-3xl md:text-4xl font-semibold text-[#102756] dark:text-white">
      {title}
      <div class="h-1 w-20 bg-gradient-to-r from-blue-500 to-emerald-500 mt-2 rounded-full"></div>
    </h2>
    <p class="text-gray-700 dark:text-gray-300 text-lg mt-6 leading-relaxed">{text}</p>
  </div>
</section>

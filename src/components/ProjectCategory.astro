---
const { title } = Astro.props;
---

<section class="py-8 md:py-12">
  <header class="mb-8">
    <h1 class="text-3xl font-semibold text-gray-800 dark:text-white relative inline-block">
      {title}
      <div class="absolute -bottom-2 left-0 h-1 w-20 bg-gradient-to-r from-blue-500 to-emerald-500 rounded-full"></div>
    </h1>
  </header>

  <div class="grid grid-cols-1 gap-8">
    <slot />
  </div>
</section>

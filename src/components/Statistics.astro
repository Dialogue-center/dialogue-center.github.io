---
const stats = [
  { number: "13+", label: "zorganizovaných diskusií" }, // Cocreation meetings (participatívne stretnutia)
  { number: "1.", label: "organizácia zapojená do OGP Local" },
  { number: "150+", label: "zúčastnených ľudí" }
];
---

<section class="py-15 flex justify-center w-full bg-blue-300 dark:bg-blue-950">
  <div class="flex flex-col gap-10 md:flex-row md:justify-around text-center">
    {stats.map((stat) => (
      <div class="flex flex-col items-center px-4">
        <span class="text-8xl font-light text-gray-100 dark:text-gray-200">{stat.number}</span>
        <span class="text-gray-800 font-medium text-lg dark:text-gray-400">{stat.label}</span>
      </div>
    ))}
  </div>
</section>
